<head>
<meta charset="UTF-8">
<title>Probability & Statistics Quiz</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #dbeafe; /* pastel blue */
        padding: 20px;
    }

    h1 {
        text-align: center;
    }

    .question {
        background: #f0f9ff;
        padding: 15px;
        margin-bottom: 15px;
        border-radius: 10px;
    }

    button {
        display: block;
        margin: 5px 0;
        padding: 8px;
        width: 100%;
        border: none;
        border-radius: 6px;
        background-color: #bfdbfe;
        cursor: pointer;
    }

    button:hover {
        background-color: #93c5fd;
    }

    button:disabled {
        cursor: not-allowed;
        opacity: 0.8;
    }

    .correct {
        color: green;
        font-weight: bold;
    }

    .wrong {
        color: red;
        font-weight: bold;
    }
</style>
</head>
<body>

<h1>Probability & Statistics Quiz</h1>

<div id="quiz"></div>

<script>
const questions = [
    {
        q: "1. What is the probability of getting heads when flipping a fair coin?",
        choices: ["1/2", "1/3", "1/4"],
        answer: 0,
        reason: "A fair coin has two equal outcomes."
    },
    {
        q: "2. How many outcomes are there when rolling one die?",
        choices: ["4", "6", "8"],
        answer: 1,
        reason: "A die has numbers 1 through 6."
    },
    {
        q: "3. What is the mean of 2, 4, and 6?",
        choices: ["4", "6", "12"],
        answer: 0,
        reason: "Mean = total ÷ number of values."
    },
    {
        q: "4. Which value appears most often in a data set?",
        choices: ["Mean", "Median", "Mode"],
        answer: 2,
        reason: "Mode is the most frequent value."
    },
    {
        q: "5. What is the probability of rolling a 3 on a fair die?",
        choices: ["1/6", "1/3", "1/2"],
        answer: 0,
        reason: "Only one favorable outcome out of six."
    },
    {
        q: "6. What is the median of 1, 3, 5?",
        choices: ["3", "5", "1"],
        answer: 0,
        reason: "The median is the middle number."
    },
    {
        q: "7. If a bag has 3 red and 2 blue balls, how many balls total?",
        choices: ["3", "5", "6"],
        answer: 1,
        reason: "Total = red + blue."
    },
    {
        q: "8. Probability values are always between:",
        choices: ["0 and 1", "1 and 10", "-1 and 1"],
        answer: 0,
        reason: "Probabilities range from 0 to 1."
    },
    {
        q: "9. What is the mean of 5 and 7?",
        choices: ["6", "12", "2"],
        answer: 0,
        reason: "Mean = (5 + 7) ÷ 2."
    },
    {
        q: "10. Which graph is best for showing parts of a whole?",
        choices: ["Bar graph", "Line graph", "Pie chart"],
        answer: 2,
        reason: "Pie charts show proportions of a whole."
    }
];

const quizDiv = document.getElementById("quiz");

questions.forEach((item, index) => {
    const div = document.createElement("div");
    div.className = "question";

    const q = document.createElement("p");
    q.textContent = item.q;
    div.appendChild(q);

    item.choices.forEach((choice, i) => {
        const btn = document.createElement("button");
        btn.textContent = choice;

        btn.onclick = () => {
            const buttons = div.querySelectorAll("button");
            buttons.forEach(b => b.disabled = true);

            const feedback = document.createElement("p");

            if (i === item.answer) {
                feedback.textContent = "Correct! ✔️";
                feedback.className = "correct";
            } else {
                feedback.textContent = "Wrong ❌ " + item.reason;
                feedback.className = "wrong";
            }
            div.appendChild(feedback);
        };

        div.appendChild(btn);
    });

    quizDiv.appendChild(div);
});
</script>

</body>
</html>
